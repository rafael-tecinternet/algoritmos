algoritmo "semnome"

var
nome:caracter
idade, contador: inteiro
inicio

   contador <- 1

   repita
   escreva("Informe nome: ")
   leia(nome)
   escreva("Informe idade: ")
   leia(idade)

   escreval("Nome: ",nome)
   escreval("Idade: ",idade)
   escreval()
   contador <- contador +1
   ate (contador > 3)
 
fimalgoritmo
