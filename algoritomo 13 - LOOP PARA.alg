algoritmo "Loop PARA"
// Função : Ler e exibir o nome e idade de 3 pessoas
var
nome: caracter
idade, contador: inteiro

inicio

   para contador de 1 ate 3 faca
    escreva("Informe o nome: ")
    leia(nome)
    escreva("Informe a idade: ")
    leia(idade)
    
    escreval()
    escreval("Nome: ",nome, " - Idade: ",idade)
    escreval()
    
   fimpara

fimalgoritmo
